@model PagedResult<UserVm>
@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Script{
    <script>
        setTimeout(function () {
            $('#idThongBao').fadeOut('slow');
        }, 3000);
    </script>
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách người dùng</li>
    </ol>

    <div class="card mb-12">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <a class="btn btn-success" asp-controller="User" asp-action="Create">Tạo mới</a>
                </div>

                <div class="col-md-6 col-xs-12">
                    <form asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-md-8">
                                <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Tìm</button>
                                <button type="button" onclick="window.location.href='/User/Index'" class="btn btn-warning"><i class="fa fa-refresh" aria-hidden="true"></i> Làm mới</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                @if (ViewBag.ThongBao != null)
                {
                    <div id="idThongBao" class="alert alert-success" role="alert">
                        @ViewBag.ThongBao
                    </div>
                }

            </div>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Họ</th>
                        <th>Tên</th>
                        <th>Số điện thoại</th>
                        <th>Tài khoản</th>
                        <th>Email</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.LastName)</td>
                            <td>@Html.DisplayFor(m => item.FirstName)</td>
                            <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
                            <td>@Html.DisplayFor(m => item.UserName)</td>
                            <td>@Html.DisplayFor(m => item.Email)</td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.Id })|
                                @Html.ActionLink("Xóa", "Delete", new { id = item.Id })|
                                @Html.ActionLink("Xem", "Details", new { id = item.Id })|
                                @Html.ActionLink("Gán quyền", "RoleAssign", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>
</div>

